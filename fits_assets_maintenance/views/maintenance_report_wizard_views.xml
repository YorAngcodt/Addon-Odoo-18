<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Maintenance Report Wizard Form View -->
    <record id="view_maintenance_report_wizard_form" model="ir.ui.view">
        <field name="name">fits.maintenance.report.wizard.form</field>
        <field name="model">fits.maintenance.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Maintenance Report">
                <sheet>
                    <div style="max-width: 600px; margin: 0 auto; padding: 20px;">

                        <!-- Header -->
                        <div style="text-align: center; margin-bottom: 30px; padding: 20px; background: linear-gradient(135deg, #007bff 0%, #0056b3 100%); border-radius: 15px; color: white;">
                            <h2 style="margin: 0; font-size: 24px;">üõ†Ô∏è Maintenance Report</h2>
                            <p style="margin: 8px 0 0 0; opacity: 0.9;">Select filters to generate maintenance detail report</p>
                        </div>

                        <!-- Filters -->
                        <group string="Filters">
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>

                        <!-- Action Buttons -->
                        <footer style="margin-top: 30px; text-align: center;">
                            <button name="action_print_maintenance_report" type="object" string="üñ®Ô∏è Print PDF" class="btn-primary" style="padding: 12px 30px; font-size: 16px; margin-right: 15px;"/>
                            <button special="cancel" string="‚ùå Cancel" class="btn-secondary" style="padding: 12px 25px; font-size: 16px;"/>
                        </footer>

                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Maintenance Report Wizard Action -->
    <record id="action_maintenance_report_wizard" model="ir.actions.act_window">
        <field name="name">Maintenance Report</field>
        <field name="res_model">fits.maintenance.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
