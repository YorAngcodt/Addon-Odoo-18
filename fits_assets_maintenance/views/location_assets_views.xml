<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Location Assets Form View -->
    <record id="view_location_assets_form" model="ir.ui.view">
        <field name="name">fits.location.assets.form</field>
        <field name="model">fits.location.assets</field>
        <field name="arch" type="xml">
            <form string="Lokasi Aset">
                <sheet>
                    <group>
                        <field name="location_code"/>
                        <field name="location_name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Location Assets List View -->
    <record id="view_location_assets_list" model="ir.ui.view">
        <field name="name">fits.location.assets.list</field>
        <field name="model">fits.location.assets</field>
        <field name="arch" type="xml">
            <list string="Daftar Lokasi Aset" editable="bottom">
                <field name="location_code"/>
                <field name="location_name"/>
            </list>
        </field>
    </record>

    <!-- Location Assets Action -->
    <record id="action_location_assets" model="ir.actions.act_window">
        <field name="name">Location Assets</field>
        <field name="res_model">fits.location.assets</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'show_name': True}</field>
    </record>
</odoo>
