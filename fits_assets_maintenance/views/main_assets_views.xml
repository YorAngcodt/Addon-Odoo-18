<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Assets Form View -->
    <record id="view_main_assets_form" model="ir.ui.view">
        <field name="name">fits.main.assets.form</field>
        <field name="model">fits.main.assets</field>
        <field name="arch" type="xml">
            <form string="Aset">
                <sheet>
                    <group>
                        <div style="margin-bottom: 16px;">
                            <field name="asset_code" readonly="1" nolabel="1"
                                   style="font-size: 0.9em; font-weight: 500; color: #7c7bad; margin-bottom: 4px; display: block;"/>
                            
                            <!-- Category Field - Removed as requested -->
                            <!-- <field name="category_id" placeholder="Pilih Kategori..."
                                   style="width: 100%; font-size: 0.8em; margin-bottom: 8px;"/> -->
                            
                            <!-- Asset Name kecil + ubah label -->
                            <field name="asset_name" placeholder="Nama Aset..."
                                   style="width: 100%; font-size: 0.8em; font-weight: 400; color: #333; margin-bottom: 8px;"/>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Main Assets List View -->
    <record id="view_main_assets_list" model="ir.ui.view">
        <field name="name">fits.main.assets.list</field>
        <field name="model">fits.main.assets</field>
        <field name="arch" type="xml">
            <list string="Daftar Aset" editable="bottom">
                <field name="asset_code"/>
                <field name="asset_name"/>
            </list>
        </field>
    </record>

    <!-- Main Assets Action -->
    <record id="action_main_assets" model="ir.actions.act_window">
        <field name="name">Main Assets</field>
        <field name="res_model">fits.main.assets</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>