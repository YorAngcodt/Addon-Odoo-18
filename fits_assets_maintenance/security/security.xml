<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- ============================= -->
        <!-- CATEGORY UTAMA -->
        <!-- ============================= -->
        <record id="module_category_fits_assets" model="ir.module.category">
            <field name="name">Assets &amp; Maintenance</field>
            <field name="description">All asset-related modules</field>
            <field name="sequence" eval="20"/>
        </record>

        <!-- ============================= -->
        <!-- LABEL 1: ASSET MAINTENANCE -->
        <!-- ============================= -->
        <record id="module_category_fits_asset_maintenance" model="ir.module.category">
            <field name="name">Asset Maintenance</field>
            <field name="description">Roles for the Asset Maintenance module</field>
            <field name="sequence" eval="25"/>
            <field name="parent_id" ref="fits_assets_maintenance.module_category_fits_assets"/>
        </record>

        <!-- GROUPS UNTUK ASSET MAINTENANCE -->
        <record id="group_fits_asset_maintenance_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="fits_assets_maintenance.module_category_fits_asset_maintenance"/>
        </record>

        <record id="group_fits_asset_maintenance_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="fits_assets_maintenance.module_category_fits_asset_maintenance"/>
            <field name="implied_ids" eval="[(4, ref('fits_assets_maintenance.group_fits_asset_maintenance_user'))]"/>
        </record>

        <!-- ============================= -->
        <!-- LABEL 2: MAINTENANCE TEAM -->
        <!-- ============================= -->
        <record id="module_category_fits_maintenance_team" model="ir.module.category">
            <field name="name">Maintenance Team</field>
            <field name="description">Roles for the Maintenance Team</field>
            <field name="sequence" eval="30"/>
            <field name="parent_id" ref="fits_assets_maintenance.module_category_fits_assets"/>
        </record>

        <!-- GROUP UNTUK MAINTENANCE TEAM -->
        <record id="group_fits_maintenance_team" model="res.groups">
            <field name="name">Team</field>
            <field name="category_id" ref="fits_assets_maintenance.module_category_fits_maintenance_team"/>
        </record>

        <!-- Employee Access Control Rules -->
        <record id="hr_employee_rule_employee" model="ir.rule">
            <field name="name">Employee: Only own employee profile</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="hr_employee_rule_manager" model="ir.rule">
            <field name="name">Employee Manager: All employees</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('fits_assets_maintenance.group_fits_asset_maintenance_manager'))]"/>
        </record>

        <record id="hr_employee_rule_team" model="ir.rule">
            <field name="name">Team: Team members only</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">[('department_id.member_ids', 'in', [user.employee_id.id])]</field>
            <field name="groups" eval="[(4, ref('fits_assets_maintenance.group_fits_maintenance_team'))]"/>
        </record>

        <!-- Aturan untuk filter aset berdasarkan role -->
        <record id="asset_rule_employee" model="ir.rule">
            <field name="name">Asset: Only assigned assets</field>
            <field name="model_id" ref="model_fits_asset"/>
            <field name="domain_force">[('responsible_person_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="asset_rule_manager" model="ir.rule">
            <field name="name">Asset: All assets</field>
            <field name="model_id" ref="model_fits_asset"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('fits_assets_maintenance.group_fits_asset_maintenance_manager'))]"/>
        </record>

        <record id="asset_rule_team" model="ir.rule">
            <field name="name">Asset: Team full access</field>
            <field name="model_id" ref="model_fits_asset"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('fits_assets_maintenance.group_fits_maintenance_team'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <!-- ============================= -->
        <!-- MAINTENANCE REQUEST RULES     -->
        <!-- ============================= -->

        <!-- User hanya bisa melihat Maintenance Request miliknya sendiri -->
        <record id="maintenance_request_rule_user" model="ir.rule">
            <field name="name">Maintenance Request: Own requests only</field>
            <field name="model_id" ref="model_fits_maintenance_request"/>
            <field name="domain_force">['|', ('user_id', '=', user.id), ('responsible_person_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('fits_assets_maintenance.group_fits_asset_maintenance_user'))]"/>
        </record>

        <!-- Manager bisa melihat semua Maintenance Request -->
        <record id="maintenance_request_rule_manager" model="ir.rule">
            <field name="name">Maintenance Request: Manager all requests</field>
            <field name="model_id" ref="model_fits_maintenance_request"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('fits_assets_maintenance.group_fits_asset_maintenance_manager'))]"/>
        </record>

        <!-- Team bisa melihat semua Maintenance Request -->
        <record id="maintenance_request_rule_team" model="ir.rule">
            <field name="name">Maintenance Request: Team all requests</field>
            <field name="model_id" ref="model_fits_maintenance_request"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('fits_assets_maintenance.group_fits_maintenance_team'))]"/>
        </record>

        <!-- ============================= -->
        <!-- MAINTENANCE CALENDAR RULES    -->
        <!-- ============================= -->

        <!-- User hanya bisa melihat event calendar miliknya sendiri -->
        <record id="maintenance_calendar_rule_user" model="ir.rule">
            <field name="name">Maintenance Calendar: Own events only</field>
            <field name="model_id" ref="model_fits_maintenance_calendar"/>
            <field name="domain_force">['|', ('maintenance_responsible_id', '=', user.id), ('responsible_person_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('fits_assets_maintenance.group_fits_asset_maintenance_user'))]"/>
        </record>

        <!-- Manager bisa melihat semua event calendar -->
        <record id="maintenance_calendar_rule_manager" model="ir.rule">
            <field name="name">Maintenance Calendar: Manager all events</field>
            <field name="model_id" ref="model_fits_maintenance_calendar"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('fits_assets_maintenance.group_fits_asset_maintenance_manager'))]"/>
        </record>

        <!-- Team bisa melihat semua event calendar -->
        <record id="maintenance_calendar_rule_team" model="ir.rule">
            <field name="name">Maintenance Calendar: Team all events</field>
            <field name="model_id" ref="model_fits_maintenance_calendar"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('fits_assets_maintenance.group_fits_maintenance_team'))]"/>
        </record>

    </data>
</odoo>
