<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Asset Report Wizard Form View -->
    <record id="view_asset_report_wizard_form" model="ir.ui.view">
        <field name="name">fits.asset.report.wizard.form</field>
        <field name="model">fits.asset.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Asset Report">
                <sheet>
                    <div style="max-width: 600px; margin: 0 auto; padding: 20px;">
                        <div style="text-align: center; margin-bottom: 30px; padding: 20px; background: linear-gradient(135deg, #17a2b8 0%, #117a8b 100%); border-radius: 15px; color: white;">
                            <h2 style="margin: 0; font-size: 24px;">ðŸ“„ Asset Report</h2>
                            <p style="margin: 8px 0 0 0; opacity: 0.9;">Generate asset list PDF</p>
                        </div>
                        <group>
                                <field name="selection_mode"
                                    placeholder="Pilih Selection Mode..."
                                    required="1"/>
                        </group>

                        <group string="FILTERS" invisible="selection_mode not in ['category', 'all']">
                            <field name="category_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}" invisible="selection_mode != 'category'"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                        <footer style="margin-top: 30px; text-align: center;">
                            <button name="action_print_asset_report" type="object" string="ðŸ–¨ï¸ Print PDF" class="btn-primary" style="padding: 12px 30px; font-size: 16px; margin-right: 15px;" invisible="selection_mode not in ['category', 'all']"/>
                            <button special="cancel" string="âŒ Cancel" class="btn-secondary" style="padding: 12px 25px; font-size: 16px;"/>
                        </footer>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_asset_report_wizard" model="ir.actions.act_window">
        <field name="name">Asset Report</field>
        <field name="res_model">fits.asset.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
