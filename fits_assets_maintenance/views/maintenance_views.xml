<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ========================= -->
    <!-- FORM VIEW: Maintenance Request -->
    <!-- ========================= -->
    <record id="view_maintenance_request_form" model="ir.ui.view">
        <field name="name">fits.maintenance.request.form</field>
        <field name="model">fits.maintenance.request</field>
        <field name="arch" type="xml">
            <form string="Maintenance Request">
                <header>
                    <!-- Tombol hanya muncul untuk Team dan Manager -->
                    <button name="action_start_progress" string="In Progress" type="object"
                            class="btn-warning" invisible="state not in ('draft')"
                            groups="fits_assets_maintenance.group_fits_maintenance_team, fits_assets_maintenance.group_fits_asset_maintenance_manager"/>

                    <button name="action_set_to_draft" string="Set to Draft" type="object"
                            class="btn-secondary" invisible="state not in ('cancelled')"
                            groups="fits_assets_maintenance.group_fits_maintenance_team, fits_assets_maintenance.group_fits_asset_maintenance_manager"/>

                    <button name="action_mark_repaired" string="Repaired" type="object"
                            class="btn-success" invisible="state not in ('in_progress')"
                            groups="fits_assets_maintenance.group_fits_maintenance_team, fits_assets_maintenance.group_fits_asset_maintenance_manager"/>

                    <button name="action_cancel" string="Cancel" type="object"
                            class="btn-danger" invisible="state not in ('in_progress', 'repaired')"
                            groups="fits_assets_maintenance.group_fits_maintenance_team, fits_assets_maintenance.group_fits_asset_maintenance_manager"/>

                    <button name="action_mark_done" string="Done" type="object"
                            class="btn-primary" invisible="state not in ('in_progress', 'repaired')"
                            groups="fits_assets_maintenance.group_fits_maintenance_team, fits_assets_maintenance.group_fits_asset_maintenance_manager"/>

                    <field name="state" widget="statusbar"
                        statusbar_visible="draft,in_progress,repaired,cancelled,done"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="maintenance_request_type" readonly="1"/>
                        </h1>
                        <div class="row">
                        <div class="col-12">
                            <field name="maintenance_request_title"
                                string="Judul Permintaan Maintenance"
                                placeholder="Enter maintenance request"
                                style="font-size: 22px; font-weight: 600; width: 100%;"/>
                        </div>
                    </div>
                    </div>

                    <!-- ========================= -->
                    <!-- GROUP: MAIN FORM FIELDS -->
                    <!-- ========================= -->
                    <group>
                        <!-- Kolom Kiri -->
                        <group>
                            <separator string="Asset Information" colspan="2"/>
                            <field name="asset_id" string="Asset" required="1" readonly="state != 'draft'" style="width: 400px; font-weight: bold; font-size: 14px;" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="category_id" string="Category" readonly="1" colspan="2" force_save="1"/>
                            <field name="location_asset_id" string="Location Assets" readonly="1" colspan="2" force_save="1"/>
                            <field name="asset_code" string="Asset Code" readonly="1" colspan="2" force_save="1"/>
                            <field name="responsible_person_id" string="Responsible Person" readonly="1" colspan="2" force_save="1"/>
                        </group>
                        
                        <!-- Kolom Kanan -->
                        <group>
                            <separator string="Assignment Information" colspan="2"/>

                            <field name="team_id" required="1" readonly="state != 'draft'"
                                groups="fits_assets_maintenance.group_fits_asset_maintenance_manager,fits_assets_maintenance.group_fits_maintenance_team"/>

                            <!-- Field lainnya bisa dilihat semua role -->
                            <field name="user_id" string="Responsible" required="1"/>
                            <field name="email"/>
                            <field name="maintenance_type" string="Maintenance Type"/>
                            <field name="priority" widget="priority"/>
                            <field name="scheduled_date" string="Scheduled Start" required="1"/>
                            <field name="scheduled_end_date" string="Scheduled End"/>
                        </group>
                    </group>

                    <!-- ========================= -->
                    <!-- NOTEBOOK BAGIAN BAWAH -->
                    <!-- ========================= -->
                    <notebook>
                        <page string="Description">
                            <field name="description" required="1" readonly="state != 'draft'"/>
                        </page>

                        <page string="Recurrence">
                            <group>
                                <group>
                                    <field name="asset_recurrence_pattern" string="Pattern" readonly="1"/>
                                    <field name="asset_recurrence_interval" string="Interval" readonly="1"/>
                                    <field name="asset_recurrence_start_date" string="Start Date" readonly="1"/>
                                    <field name="asset_recurrence_end_date" string="End Date" readonly="1"/>
                                </group>
                                <!-- Asset Next Maintenance Date field is disabled -->
                                <!-- <group>
                                    <field name="asset_next_maintenance_date" readonly="1"/>
                                </group> -->
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <!-- ========================= -->
                <!-- CHATTER BAGIAN BAWAH -->
                <!-- ========================= -->
                <chatter>
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                    <field name="activity_ids"/>
                </chatter>
            </form>
        </field>
    </record>


    <!-- ========================= -->
    <!-- LIST VIEW -->
    <!-- ========================= -->
    <record id="view_maintenance_request_list" model="ir.ui.view">
        <field name="name">fits.maintenance.request.list</field>
        <field name="model">fits.maintenance.request</field>
        <field name="arch" type="xml">
            <list string="Maintenance Requests"
                  decoration-info="state=='draft'"
                  decoration-warning="state=='in_progress'"
                  decoration-success="state=='done'"
                  decoration-muted="state=='repaired'">
                <field name="priority" widget="priority"/>
                <field name="maintenance_request_type"/>
                <field name="maintenance_request_title" string="Request Title"/>
                <field name="asset_id"/>
                <field name="category_id"/>
                <field name="team_id"/>
                <field name="user_id"/>
                <field name="scheduled_date"/>
                <field name="scheduled_end_date"/>
                <field name="maintenance_type" invisible="1"/>
                <field name="state"/>
            </list>
        </field>
    </record>


    <!-- ========================= -->
    <!-- SEARCH VIEW -->
    <!-- ========================= -->
    <record id="view_maintenance_request_search" model="ir.ui.view">
        <field name="name">fits.maintenance.request.search</field>
        <field name="model">fits.maintenance.request</field>
        <field name="arch" type="xml">
            <search string="Maintenance Requests">
                <field name="maintenance_request_type"/>
                <field name="asset_id"/>
                <field name="category_id"/>
                <field name="team_id"/>
                <field name="user_id"/>
                <field name="maintenance_request_title"/>
                <field name="state"/>

                <filter string="Starred" name="starred" domain="[('priority', '!=', '0')]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Repaired" name="repaired" domain="[('state', '=', 'repaired')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Corrective" name="corrective" domain="[('maintenance_type', '=', 'corrective')]"/>
                <filter string="Preventive" name="preventive" domain="[('maintenance_type', '=', 'preventive')]"/>

                <group expand="0" string="Group By">
                    <filter string="State" name="state" context="{'group_by':'state'}"/>
                    <filter string="Priority" name="priority" context="{'group_by':'priority'}"/>
                    <filter string="Category" name="category_id" context="{'group_by':'category_id'}"/>
                    <filter string="Team" name="team_id" context="{'group_by':'team_id'}"/>
                    <filter string="Responsible" name="user_id" context="{'group_by':'user_id'}"/>
                    <filter string="Maintenance Type" name="maintenance_type" context="{'group_by':'maintenance_type'}"/>
                </group>
            </search>
        </field>
    </record>


    <!-- ========================= -->
    <!-- KANBAN VIEW -->
    <!-- ========================= -->
    <record id="view_maintenance_request_kanban" model="ir.ui.view">
        <field name="name">fits.maintenance.request.kanban</field>
        <field name="model">fits.maintenance.request</field>
        <field name="arch" type="xml">
            <kanban string="Maintenance Requests" class="o_kanban_mobile" default_group_by="state">
                <field name="maintenance_request_type"/>
                <field name="asset_id"/>
                <field name="category_id"/>
                <field name="team_id"/>
                <field name="user_id"/>
                <field name="scheduled_date"/>
                <field name="priority"/>
                <field name="maintenance_type"/>
                <field name="maintenance_request_title"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click" style="min-height: 180px; max-width: 320px; margin-bottom: 10px;">
                            <!-- Card Header with Title and Priority -->
                            <div class="o_kanban_record_headings mb-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <strong style="font-size: 16px; line-height: 1.2; flex-grow: 1; margin-right: 8px;">
                                        <field name="maintenance_request_type"/>
                                    </strong>
                                    <div class="o_kanban_record_priority">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                </div>
                            </div>

                            <!-- Asset Information Section -->
                            <div class="o_kanban_record_body mb-3">
                                <div class="mb-2">
                                    <div class="small text-muted mb-1 d-flex align-items-center">
                                        <i class="fa fa-cube mr-2" style="width: 16px; text-align: center;"></i>
                                        <strong>Asset:</strong> <field name="asset_id"/>
                                    </div>
                                    <div class="small text-muted mb-1 d-flex align-items-center">
                                        <i class="fa fa-tag mr-2" style="width: 16px; text-align: center;"></i>
                                        <strong>Category:</strong> <field name="category_id"/>
                                    </div>
                                </div>

                                <!-- Assignment Information Section -->
                                <div class="mb-2">
                                    <div class="small text-muted mb-1 d-flex align-items-center">
                                        <i class="fa fa-users mr-2" style="width: 16px; text-align: center;"></i>
                                        <strong>Team:</strong> <field name="team_id"/>
                                    </div>
                                    <div class="small text-muted mb-1 d-flex align-items-center">
                                        <i class="fa fa-user mr-2" style="width: 16px; text-align: center;"></i>
                                        <strong>Responsible:</strong> <field name="user_id"/>
                                    </div>
                                </div>

                                <!-- Schedule Information -->
                                <div class="mb-2">
                                    <div class="small text-muted d-flex align-items-center">
                                        <i class="fa fa-calendar mr-2" style="width: 16px; text-align: center;"></i>
                                        <strong>Scheduled:</strong> <field name="scheduled_date"/>
                                    </div>
                                </div>

                                <!-- Request Title -->
                                <div class="mt-2 p-2 bg-light rounded">
                                    <div class="small">
                                        <strong>Request:</strong> <field name="maintenance_request_title"/>
                                    </div>
                                </div>
                            </div>

                            <!-- Bottom Section with Status and Type -->
                            <div class="o_kanban_record_bottom mt-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="state" widget="label_selection" style="font-size: 11px;"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="maintenance_type" widget="label_selection" style="font-size: 11px;"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- ========================= -->
    <!-- ACTION -->
    <!-- ========================= -->
    <record id="action_maintenance_request" model="ir.actions.act_window">
        <field name="name">Maintenance Requests</field>
        <field name="res_model">fits.maintenance.request</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'default_state': 'draft'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first maintenance request!
            </p>
        </field>
    </record>

</odoo>
