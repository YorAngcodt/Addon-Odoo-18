<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Asset QR Report Wizard Form View -->
    <record id="view_asset_qr_report_wizard_form" model="ir.ui.view">
        <field name="name">fits.asset.qr.report.wizard.form</field>
        <field name="model">fits.asset.qr.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate QR Code Labels">
                <sheet>
                    <div style="max-width: 600px; margin: 0 auto; padding: 20px;">

                        <!-- Header -->
                        <div style="text-align: center; margin-bottom: 30px; padding: 20px; background: linear-gradient(135deg, #17a2b8 0%, #117a8b 100%); border-radius: 15px; color: white;">
                            <h2 style="margin: 0; font-size: 24px;">üè∑Ô∏è Asset QR Report</h2>
                            <p style="margin: 8px 0 0 0; opacity: 0.9;">Select assets to generate QR labels</p>
                        </div>

                        <!-- Selection Mode -->
                        <group>
                                <field name="selection_mode"
                                    placeholder="Pilih Selection Mode..."
                                    required="1"/>
                            </group>


                        <!-- Filters Container (hidden until selection_mode chosen) -->
                        <group string="FILTERS" invisible="not selection_mode">
                            <!-- Dates (Category optional, All required) -->
                            <field name="date_start" invisible="selection_mode not in ['category', 'all']"/>
                            <field name="date_end" invisible="selection_mode not in ['category', 'all']"/>

                            <!-- Asset Selection - Manual Mode Only -->
                            <field name="asset_ids_manual" widget="many2many_tags" options="{'no_create': True, 'no_open': True}" placeholder="Select assets to generate QR codes for..." domain="[('serial_number_code', '!=', False)]" invisible="selection_mode != 'manual'"/>

                            <!-- Category Selection - Category Mode Only -->
                            <field name="category_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}" placeholder="Select asset categories..." invisible="selection_mode != 'category'"/>
                        </group>

                        <!-- Hidden fields for controlling visibility -->
                        <field name="show_manual_field" invisible="1"/>
                        <field name="show_category_field" invisible="1"/>
                        <field name="show_all_field" invisible="1"/>
                        <field name="available_category_ids" invisible="1" force_save="1"/>

                        <!-- Action Buttons: keep footer always to suppress default OK; toggle inner buttons -->
                        <footer style="margin-top: 30px; text-align: center;">
                            <button name="action_print_qr_labels" type="object" string="üñ®Ô∏è Generate QR Labels" class="btn-success" style="padding: 12px 30px; font-size: 16px; margin-right: 15px;" invisible="not selection_mode"/>
                            <button special="cancel" string="‚ùå Cancel" class="btn-secondary" style="padding: 12px 25px; font-size: 16px;"/>
                        </footer>

                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Asset QR Report Wizard Action -->
    <record id="action_asset_qr_report_wizard" model="ir.actions.act_window">
        <field name="name">Asset QR Report</field>
        <field name="res_model">fits.asset.qr.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_view_types">form,list</field>
    </record>
</odoo>
